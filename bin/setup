#!/bin/bash

activatorV="1.3.7"

cd ${OPENSHIFT_DATA_DIR}
curl http://downloads.typesafe.com/typesafe-activator/${activatorV}/typesafe-activator-${activatorV}-minimal.zip > activator.zip
unzip activator.zip
rm activator.zip
ln -s ${OPENSHIFT_DATA_DIR}/activator-minimal-${activatorV} ${OPENSHIFT_DATA_DIR}/activator
